{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "space-before-function-paren": [
            "error", {
                "anonymous": "always", 
                "named": "never", 
                "asyncArrow": "always"}
        ]
    }
}